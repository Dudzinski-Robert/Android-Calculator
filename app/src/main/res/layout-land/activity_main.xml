<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background">

    <android.widget.Button
        android:id="@+id/btn_simple"
        android:layout_width="48pt"
        android:layout_height="48pt"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_simple"
        android:onClick="moveToSimpleCalc"
        android:textSize="0pt"
        app:layout_constraintBottom_toTopOf="@+id/space2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/space2"
        tools:ignore="MissingConstraints,UsingOnClickInXml" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="@string/simple"
        android:textColor="@color/colorPrimary"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="@+id/btn_simple"
        app:layout_constraintEnd_toStartOf="@+id/btn_simple"
        app:layout_constraintTop_toTopOf="@+id/btn_simple"
        app:layout_constraintVertical_bias="0.482" />

    <android.widget.Button
        android:id="@+id/btn_advanced"
        android:layout_width="48pt"
        android:layout_height="48pt"
        android:layout_marginTop="24dp"
        android:background="@drawable/butotn1"
        android:onClick="moveToAdvancedCalc"
        android:textSize="0pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/space2"
        app:layout_constraintTop_toBottomOf="@+id/space2"
        tools:ignore="MissingConstraints,UsingOnClickInXml" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/advanced"
        android:textColor="@color/colorPrimary"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="@+id/btn_advanced"
        app:layout_constraintEnd_toStartOf="@+id/btn_advanced"
        app:layout_constraintTop_toTopOf="@+id/btn_advanced"
        app:layout_constraintVertical_bias="0.505" />

    <android.widget.Button
        android:id="@+id/btn_exit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="closeApplication"
        android:background="@drawable/ic_baseline_exit_to_app_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/btn_about_me"
        android:layout_width="224dp"
        android:layout_height="37dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_about_me"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="moveToAbout"
        android:text="@string/about"
        android:textColor="@color/black_background"
        app:layout_constraintEnd_toStartOf="@+id/space2"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/lib"
        android:text="@string/calculator"
        android:textColor="@color/colorPrimary"
        android:textSize="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/space2"
        app:layout_constraintEnd_toStartOf="@+id/space2"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/version"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Space
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>